{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "removeComments": false,
    "declaration": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
